#!/bin/bash

case "$1" in
applications)
  config="\
    -show drun \
    -modi drun \
    -display-drun rofi"
  ;;
command)
  config="\
    -show drun \
    -modi drun \
    -run-command 'zsh -c --rcs \"source $HOME/.zshrc; {cmd}\"' \
    -lines 0 \
    -line-padding 0 \
    -display-drun exec"
  ;;
emoji)
  config="\
    -show emoji \
    -modi emoji"
  ;;
*)
  echo $"Usage: $0 <applications|command|emoji>"
  exit 1
  ;;
esac

rofi -theme Pop-Dark \
  -padding 5 \
  -bw 0 \
  -show-icons true \
  -show-scrollbar true \
  -font "Fira Code 24" \
  $config
