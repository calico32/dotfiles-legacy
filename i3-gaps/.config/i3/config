#
#
# for use with i3-gaps
#
#

# Super key
set $mod Mod4

# Font for window titles
font pango:Ubuntu Condensed 12

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs out of X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Really exit i3?' -B 'Exit i3' 'i3-msg exit'"



#########################
# window borders/titles #
#########################

# disable borders
for_window [class=".*"] border pixel 0
hide_edge_borders smart

for_window [class=".*"] title_format " <span size=\\"smaller\\">%title</span>"

# class                 border  backgr. text    indicator child_border
client.focused          #103860 #103860 #ffffff #2e9ef4   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

# middle click on titlebar kills window
bindsym --release button2 kill



##################
# gaps gaps gaps #
##################

# initial gaps
gaps inner 15
gaps bottom 28

# gap adjustment
bindsym $mod+minus gaps inner all plus 5
bindsym $mod+equal gaps inner all minus 5
bindsym $mod+Shift+minus gaps outer all plus 5
bindsym $mod+Shift+equal gaps outer all minus 5

# show/hide polybar
bindsym $mod+Shift+p exec "polybar-msg cmd hide" gaps bottom all set 0
bindsym $mod+p exec "polybar-msg cmd show" gaps bottom all set 28



############
# keyboard #
############

# function keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev
bindsym Print exec --no-startup-id "zsh -c \\"/usr/bin/flameshot gui\\""

# airplane mode (f12)
bindsym XF86RFKill exec -- bash -e "rfkill list | grep -q '\byes\b' && rfkill unblock all || rfkill block all"



################
# mouse config #
################

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Disable focus on mouse hover
focus_follows_mouse no

# kill focused window
bindsym $mod+Shift+q kill



############
# programs #
############

bindsym $mod+Return exec "gnome-terminal"

set $rofitheme -theme Pop-Dark -padding 5 -bw 0 -show-icons true -hide-scrollbar true -font \\"Fira Code 12\\"

bindsym $mod+d exec --no-startup-id "rofi -show combi -modi \\"drun,ssh,combi\\" -combi-modi \\"drun,ssh\\" -display-combi \\"rofi\\" -combi-display-format \\"{name}\\" $rofitheme"


bindsym $mod+Shift+d exec --no-startup-id "rofi -show drun -run-shell-command '{terminal} -e \\" {cmd}; read -n 1 -s\\"' -lines 0 -display-drun \\"exec\\" $rofitheme"

bindsym $mod+Mod1+d exec --no-startup-id "rofi -show emoji -modi emoji $rofitheme"



################
# window focus #
################

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child



###################
# window movement #
###################

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

bindsym $mod+Shift+s sticky toggle


##############
# workspaces #
##############

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

set $mv move container
set $ws workspace number

# switch to workspace
bindsym $mod+1 $ws $ws1
bindsym $mod+2 $ws $ws2
bindsym $mod+3 $ws $ws3
bindsym $mod+4 $ws $ws4
bindsym $mod+5 $ws $ws5
bindsym $mod+6 $ws $ws6
bindsym $mod+7 $ws $ws7
bindsym $mod+8 $ws $ws8
bindsym $mod+9 $ws $ws9
bindsym $mod+0 $ws $ws10

# move focused container to workspace
bindsym $mod+Shift+1 $mv to $ws $ws1
bindsym $mod+Shift+2 $mv to $ws $ws2
bindsym $mod+Shift+3 $mv to $ws $ws3
bindsym $mod+Shift+4 $mv to $ws $ws4
bindsym $mod+Shift+5 $mv to $ws $ws5
bindsym $mod+Shift+6 $mv to $ws $ws6
bindsym $mod+Shift+7 $mv to $ws $ws7
bindsym $mod+Shift+8 $mv to $ws $ws8
bindsym $mod+Shift+9 $mv to $ws $ws9
bindsym $mod+Shift+0 $mv to $ws $ws10

# place apps on certain workspaces
assign [class="firefoxdeveloperedition"] $ws1
assign [class="discord"] $ws3
assign [class="cantata"] $ws4
assign [class="google play music desktop player"] $ws4



###################
# window resizing #
###################

set $resizeAmntPx 3
set $resizeAmntPpt 1

set $resizeAmnt $resizeAmntPx px or $resizeAmntPpt ppt

mode "resize" {
  bindsym j resize shrink width $resizeAmntPx px or $resizeAmntPpt ppt
  bindsym k resize grow height $resizeAmntPx px or $resizeAmntPpt ppt
  bindsym l resize shrink height $resizeAmntPx px or $resizeAmntPpt ppt
  bindsym semicolon resize grow width $resizeAmntPx px or $resizeAmntPpt ppt

  # arrow keys
  bindsym Left resize shrink width $resizeAmntPx px or $resizeAmntPpt ppt
  bindsym Down resize grow height $resizeAmntPx px or $resizeAmntPpt ppt
  bindsym Up resize shrink height $resizeAmntPx px or $resizeAmntPpt ppt
  bindsym Right resize grow width $resizeAmntPx px or $resizeAmntPpt ppt

  # exit resize mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"



#############
# processes #
#############

# Set background with feh
exec $HOME/.fehbg

# Start polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start picom
exec --no-startup-id picom -b

# Start Pulseaudio and effects
exec --no-startup-id '/usr/bin/pulseaudio --start'
exec --no-startup-id pulseeffects --gapplication-service

exec flameshot

# Start mpd
exec --no-startup-id mpd


# Do GNOME things
exec --no-startup-id /usr/lib/gsd-xsettings
# exec_always --no-startup-id gnome-power-manager
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
# exec --no-startup-id gnome-flashback
# exec --no-startup-id /usr/bin/gnome-screensaver

exec --no-startup-id dbus-send \
    --session \
    --print-reply=literal \
    --dest=org.gnome.SessionManager \
    "/org/gnome/SessionManager" \
    org.gnome.SessionManager.RegisterClient \
    "string:i3" \
    "string:$DESKTOP_AUTOSTART_ID"
