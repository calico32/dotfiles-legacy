#!/bin/bash

if [ -z "$@" ]; then
  echo -en "Shutdown\0icon\x1fsystem-shutdown\n"
  echo -en "Logout\0icon\x1fsystem-log-out\n"
  echo -en "Suspend\0icon\x1fsystem-suspend\n"
  echo -en "Reboot\0icon\x1fsystem-restart\n"
else
  case "$1" in
  Shutdown)
    echo -en "Now\n30s\n1m"
    ;;
  Exit)
    i3-msg exit
    ;;
  Reboot)
    sudo reboot
    ;;
  Suspend)
    systemctl suspend
    ;;
  esac
fi
