#!/bin/bash

case "$1" in
apps)
  rofi -show drun -theme clean
  ;;
command)
  config="\
    -show drun \
    -modi drun \
    -run-command 'zsh -c --rcs \"source $HOME/.zshrc; {cmd}\"' \
    -lines 0 \
    -line-padding 0 \
    -display-drun exec"
  rofi -theme Pop-Dark \
    -padding 14 \
    -bw -1 \
    -show-icons true \
    -show-scrollbar true \
    -font "Fira Code 12" \
    $config
  ;;
emoji)
  config="\
    -show emoji \
    -modi emoji"
  rofi -theme Pop-Dark \
    -padding 14 \
    -bw -1 \
    -show-icons true \
    -show-scrollbar true \
    -font "Fira Code 12" \
    $config
  ;;
music)
  rofi -modi 'Music:~/.local/bin/rofi-music' -show Music -theme music
  ;;
powermenu)
  rofi -modi 'Powermenu:~/.local/bin/rofi-powermenu' -show Powermenu -theme powermenu
  ;;
*)
  echo "Usage: $0 <applications|command|emoji>"
  exit 1
  ;;
esac
